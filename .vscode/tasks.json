{
	"version": "2.0.0",

	"tasks": [
		{
			"label": "code2prompt",
			"type": "shell",
			"command": "code2prompt",
			"args": [
				"--exclude",
				"\"**/*.md\"",
				"--exclude",
				"uv.lock",
				"--exclude",
				"bun.lockb",
				"--exclude",
				"requirements.txt",
				"-O",
				".cursor/code2prompt.md",
				"."
			]
		},
		{
			"label": ".DS_Storeファイルと空ディレクトリの削除",
			"type": "shell",
			"command": "find ./src -name \".DS_Store\" -type f -delete && find ./src -type d -empty -delete"
		},
		{
			"label": "Build",
			"dependsOn": [
				".DS_Storeファイルと空ディレクトリの削除",
				"Lint",
				"code2prompt"
			],
			"dependsOrder": "sequence",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
